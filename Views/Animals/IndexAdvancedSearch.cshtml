@model IEnumerable<AnimalChip.Models.Animal>

@{
    ViewData["Title"] = "Index";
}

<h1>Advanced Search for Animal</h1>

@if (Model.Count() == 0)
{
<p>There is no Animal with given chip @TempData["Message"]</p>

    }
    else
    {
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Kind)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Breed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Chip)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kind)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Breed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Chip)
                    </td>
                    <td>
                        <a asp-action="DetailsAdvacedSearch" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    }

    <div>
        <a asp-action="AdvancedSearch">Back to Search</a>
    </div>
